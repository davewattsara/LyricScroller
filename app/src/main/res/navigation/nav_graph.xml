<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="nz.ac.ara.dtw0048.lyricscroller.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="nz.ac.ara.dtw0048.lyricscroller.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_lyricFragment"
            app:destination="@id/lyricFragment" />
    </fragment>
    <fragment
        android:id="@+id/lyricFragment"
        android:name="nz.ac.ara.dtw0048.lyricscroller.view.LyricFragment"
        android:label="fragment_lyric"
        tools:layout="@layout/fragment_lyric" />
</navigation>